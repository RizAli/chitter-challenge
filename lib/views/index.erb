<h1>Welcome to the Chitter</h1>

<ul>
  <% @peeps.each do |peep| %>
    <% @peeps %>
    <li><%= peep.message %></li>
  <% end %>
</ul>
<br>
<div id="new-peep">
  <form action="/peeps" method="post">
    message: <input type="text" name="message">
    <input type="submit" value="Add peep">
  </form>
</div>

 <% if current_user %>
   Welcome, <%= current_user.name %>


   <form id="sign-out" method="post" action="/sessions">
     <input type="hidden" name="_method" value="delete">
     <input type="submit" value="Sign out">
   </form>


 <% else %>
<a href="/users/new">Sign up</a>
<br>
<a href="/sessions/new">Sign in</a>
<br>
 <% end %>
